# Editor configuration, see http://editorconfig.org
# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
indent_style = space
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[{*.gradle,*.gradle.kts}]
indent_size = 4

[{*.yml,*.yaml}]
indent_size = 2

[*.kt]
indent_size = 4
continuation_indent_size = 4

[*.kts]
indent_size = 4
continuation_indent_size = 4

# Disable function naming rule for Composable functions
[*.kt]
ktlint_standard_function-naming = disabled